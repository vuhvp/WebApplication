html
  head
    title EasyTodo
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src=' https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    script(src='/js/main.js')
  body
    div(class="container")
      h1 EasyTodo
      #app
        form(action="/todo" method="POST" id="todoForm" class="needs-validation" novalidate="true")
          div(class="mb-3 position-relative")
            label(for="taskName" class="form-label") Task Name
            input(type="text" class="form-control" id="taskName" name="taskName" required="true")
          button(type="submit" class="btn btn-primary") Add
        br
        ol(class="list-group list-group-numbered")
          each val in todoList
            li(class="list-group-item d-flex justify-content-between align-items-start")
              div(class="ms-2 me-auto")= val.taskName
              span(role="button" class="btn-close" data-todoId=val._id)